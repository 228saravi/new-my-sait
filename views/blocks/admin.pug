extends ../_tempalte_admin

block content
    .admin
        .admin__left-block
            
            hr.admin_line
            ul.menu
                li.menu_panel.menu__home
                    .menu__home-icon
                    .text Главная
                li.menu_panel.menu__works Работы
                li.menu_panel.menu__jobs Вакансии
        .admin__right-block
            .block.block-menu__home Главная
            .block.block-menu__works Наши работы
            .block.block-menu__jobs 
                form.from_addJob(action="/admin/addJob" method="POST")
                    input.from_addJob__name(type="text", name="name")
                    input.from_addJob__conditions(type="text", name="conditions")
                    input.from_addJob__requirements(type="text", name="requirements")
                    button(type="submit") Отправить
    script(src="/js/main.js")
    script(src="/js/adminka.js")
    script(src="/js/addJobs.js")